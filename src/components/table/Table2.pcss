:global thead tr:last-child {
  visibility: hidden;
}

:global .table {
  position: relative;
  height: 100vh;
  background-color: white;
}

:global th .transcriptWrapper,
:global td .transcriptWrapper {
  position: relative;
  width: 100%;
  height: 100%;

  & .with_transcripted {
    position: absolute;
    top: 0;
    left: 0;
    visibility: hidden;
    transition: 0.6s 0.6s;
  }

  &:hover {
    & .with_transcripted {
      visibility: visible;
    }
  }
}
