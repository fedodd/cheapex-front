.thead .tr:last-child {
  visibility: hidden;
}

.table {
  position: relative;
  height: 100vh;
  background-color: white;
}

.tr :global .transcriptWrapper {
  position: relative;
  width: 100%;
  height: 100%;

  & :global .with_transcripted {
    position: absolute;
    top: 0;
    left: 0;
    visibility: hidden;
    transition: 0.6s 0.6s;
  }

  &:hover {
    & :global .with_transcripted {
      visibility: visible;
    }
  }
}
