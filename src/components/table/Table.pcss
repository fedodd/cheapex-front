/* крепим итоговые колонки*/

:global .rt-tr .rt-th:nth-last-child(-n + 2),
:global .rt-tr .rt-td:nth-last-child(-n + 2) {
  position: sticky;
  right: 0; /* справа появаляются нижние ряды при прокрутке*/
  z-index: 10;
  justify-content: flex-start;
  background-color: white;

  :global .rt-tr-group.fixed & {
    z-index: 20;
    background-color: #fff9b8;
  }

  :global .rt-tr-group.fixed:hover & {
    background-color: #f2f2e5;
  }
}

:global .rt-tr .rt-th:nth-last-child(2),
:global .rt-tr .rt-td:nth-last-child(2) {
  right: var(--lastColumnWidth);
  padding-left: 20px;

  :global .is__end .__main &::before {
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    content: "";
  }
}

/* крепим названия компаний*/
:global .rt-th:nth-child(-n + 2),
:global .rt-td:nth-child(-n + 2) {
  position: sticky;
  left: 0;
  z-index: 10;
  min-width: 20px;
  background-color: white;

  :global .rt-tr-group.fixed & {
    z-index: 20;
    background-color: #fff9b8;
  }

  :global .rt-tr-group.fixed:hover & {
    background-color: #f2f2e5;
  }
}

:global .rt-tr .rt-th:nth-child(2),
:global .rt-tr .rt-td:nth-child(2) {
  left: var(--firstColumnWidth);
  :global .is__scrolling .table.__main &::after {
    /* убрать main если полоску будем и на второй таблице показывать*/
    position: absolute;
    top: 0;
    right: 0;
    width: 1px;
    height: 100%;
    border-right: 1px rgba(0, 0, 0, 0.2) solid;
    background-image: none;
    content: "";
  }
}

/* fixed rows*/

:global .rt-tr-group.fixed {
  position: sticky;
  top: 0px;
  z-index: 20;
  background-color: #fff9b8;

  &:hover {
    z-index: 21;
    background-color: #f2f2e5;
  }
}

:global .rt-tr-group:hover {
  background-color: #eef0f4;

  & .rt-td:nth-last-child(-n + 2),
  & .rt-td:nth-child(-n + 2) {
    background-color: #eef0f4;
  }
}

/* filtered rows*/

:global .rt-tr-group.filtered__out {
  display: none;
}
/* underline*/

:global .rt-tr .rt-td:nth-child(2) {
  text-decoration: underline;
}

:global .__noData .rt-td {
  &:last-child {
    padding-left: 40px;
    //color: #f33;
  }

  &:last-child {
    padding-left: 40px;
    //color: #f33;
  }

  &:second-child {
    width: var(--companiesWidth);
  }
}

:global .__noData .rt-td:nth-child(-n + 2) {
  position: sticky;
  z-index: 21;
}

