/* aligning */

:global .rt-td {
  & .is__rightAlign {
    margin-left: -5px;
    width: 100%;
    text-align: right;
  }

  & .is__centerAlign {
    width: 100%;
    text-align: center;
  }

  & .dotsConnected {
    display: flex;
    width: 100%;
    text-align: right;
  }
}

:global .rt-table .rt-td,
:global .rt-table .rt-th {
  &:first-child {
    justify-content: flex-end;
  }

  &:nth-child(2) {
    justify-content: flex-start;
    //padding-left: 15px;
  }
}

:global .firstChildrenColumn {
  padding-left: 20px;
}

:global .lastChildrenColumn {
  padding-right: 20px;
}

:global div.with__equally {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

:global .columnGroup {
  border-left: 10px solid red;
}
